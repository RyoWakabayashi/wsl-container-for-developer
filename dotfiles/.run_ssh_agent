# If ssh-agent is not running, start it and add all keys

GREP_RESULTS_COUNT=$(ps aux | grep ssh-agent | wc -l)
SSH_ENV=~/.ssh-env-vars

if [ "2" -gt $LINES ] ; then
    ssh-agent -s > "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
else
    if [ -f "${SSH_ENV}" ]; then
        . "${SSH_ENV}" > /dev/null
    else
        ssh-agent -s > "${SSH_ENV}"
        . "${SSH_ENV}" > /dev/null
    fi
fi
